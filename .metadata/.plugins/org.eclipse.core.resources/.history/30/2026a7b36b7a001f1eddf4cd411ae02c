package lead.com;

import java.time.LocalDate;

import com.fasterxml.jackson.annotation.JsonFormat;

import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;
;

@Entity
@ApiModel(description = "Details about the lead")
public class LeadEntity {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    @ApiModelProperty(notes = "The unique ID of the lead")
    private int id;

    @ApiModelProperty(notes = "The name of the lead", example = "John Doe")
    private String name;

  //  @ApiModelProperty(notes = "The country code for the lead", example = "+1")
    private String cc;

   // @ApiModelProperty(notes = "The phone number of the lead", example = "1234567890")
    private String phone;

    //@ApiModelProperty(notes = "The email address of the lead", example = "johndoe@example.com")
    private String email;

   // @ApiModelProperty(notes = "The fee quoted to the lead", example = "5000")
    private String feeQuoted;

   // @ApiModelProperty(notes = "The current status of the lead", example = "New")
    private String leadStatus;

  //  @ApiModelProperty(notes = "The source of the lead", example = "Website")
    private String leadSource;

   // @ApiModelProperty(notes = "The stack associated with the lead", example = "Java, Spring")
    private String stack;

   // @ApiModelProperty(notes = "The course related to the lead", example = "Software Development")
    private String course;

   // @ApiModelProperty(notes = "The class mode for the lead", example = "Online")
    private String classMode;

    @JsonFormat(shape = JsonFormat.Shape.STRING, pattern = "d MMMM yyyy") // Format for "2 May 2025"
  //  @ApiModelProperty(notes = "The next follow-up date", example = "2 May 2025")
    private LocalDate nextFollowUp;

    //@ApiModelProperty(notes = "Additional description about the lead", example = "Looking for a software development course")
    private String description;

    // Getters and Setters
    public int getId() {
        return id;
    }

    public void setId(int id) {
        this.id = id;
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public String getCc() {
        return cc;
    }

    public void setCc(String cc) {
        this.cc = cc;
    }

    public String getPhone() {
        return phone;
    }

    public void setPhone(String phone) {
        this.phone = phone;
    }

    public String getEmail() {
        return email;
    }

    public void setEmail(String email) {
        this.email = email;
    }

    public String getFeeQuoted() {
        return feeQuoted;
    }

    public void setFeeQuoted(String feeQuoted) {
        this.feeQuoted = feeQuoted;
    }

    public String getLeadStatus() {
        return leadStatus;
    }

    public void setLeadStatus(String leadStatus) {
        this.leadStatus = leadStatus;
    }

    public String getLeadSource() {
        return leadSource;
    }

    public void setLeadSource(String leadSource) {
        this.leadSource = leadSource;
    }

    public String getStack() {
        return stack;
    }

    public void setStack(String stack) {
        this.stack = stack;
    }

    public String getCourse() {
        return course;
    }

    public void setCourse(String course) {
        this.course = course;
    }

    public String getClassMode() {
        return classMode;
    }

    public void setClassMode(String classMode) {
        this.classMode = classMode;
    }

    public LocalDate getNextFollowUp() {
        return nextFollowUp;
    }

    public void setNextFollowUp(LocalDate nextFollowUp) {
        this.nextFollowUp = nextFollowUp;
    }

    public String getDescription() {
        return description;
    }

    public void setDescription(String description) {
        this.description = description;
    }
}
