package com.lead.entity;

import java.time.LocalDateTime;
import java.util.Objects;

import jakarta.persistence.Entity;
import jakarta.persistence.GeneratedValue;
import jakarta.persistence.GenerationType;
import jakarta.persistence.Id;

@Entity
public class LeadEntity {

    @Id
    @GeneratedValue(strategy = GenerationType.IDENTITY)
    private int id;

    private String name;
    private String cc;
    private String phone;
    private String email;
    private String feeQuoted;
    private String leadStatus;
    private String leadSource;
    private String stack;
    private String course;
    private String classMode;
    private LocalDateTime nextFollowUp;
    private String description;

    // Constructors
    public LeadEntity() {
    }

    public LeadEntity(int id, String name, String cc, String phone, String email, String feeQuoted, String leadStatus,
                String leadSource, String stack, String course, String classMode, LocalDateTime nextFollowUp, String description) {
        this.id = id;
        this.name = name;
        this.cc = cc;
        this.phone = phone;
        this.email = email;
        this.feeQuoted = feeQuoted;
        this.leadStatus = leadStatus;
        this.leadSource = leadSource;
        this.stack = stack;
        this.course = course;
        this.classMode = classMode;
        this.nextFollowUp = nextFollowUp;
        this.description = description;
    }

    // Getters and Setters
    public int getId() {
        return id;
    }

    public void setId(int id) {
        this.id = id;
    }

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public String getCc() {
        return cc;
    }

    public void setCc(String cc) {
        this.cc = cc;
    }

    public String getPhone() {
        return phone;
    }

    public void setPhone(String phone) {
        this.phone = phone;
    }

    public String getEmail() {
        return email;
    }

    public void setEmail(String email) {
        this.email = email;
    }

    public String getFeeQuoted() {
        return feeQuoted;
    }

    public void setFeeQuoted(String feeQuoted) {
        this.feeQuoted = feeQuoted;
    }

    public String getLeadStatus() {
        return leadStatus;
    }

    public void setLeadStatus(String leadStatus) {
        this.leadStatus = leadStatus;
    }

    public String getLeadSource() {
        return leadSource;
    }

    public void setLeadSource(String leadSource) {
        this.leadSource = leadSource;
    }

    public String getStack() {
        return stack;
    }

    public void setStack(String stack) {
        this.stack = stack;
    }

    public String getCourse() {
        return course;
    }

    public void setCourse(String course) {
        this.course = course;
    }

    public String getClassMode() {
        return classMode;
    }

    public void setClassMode(String classMode) {
        this.classMode = classMode;
    }

    public LocalDateTime getNextFollowUp() {
        return nextFollowUp;
    }

    public void setNextFollowUp(LocalDateTime nextFollowUp) {
        this.nextFollowUp = nextFollowUp;
    }

    public String getDescription() {
        return description;
    }

    public void setDescription(String description) {
        this.description = description;
    }

    // Override equals and hashCode
    @Override
    public boolean equals(Object o) {
        if (this == o) return true;
        if (o == null || getClass() != o.getClass()) return false;
        LeadEntity lead = (LeadEntity) o;
        return id == lead.id && Objects.equals(name, lead.name) && Objects.equals(cc, lead.cc)
                && Objects.equals(phone, lead.phone) && Objects.equals(email, lead.email)
                && Objects.equals(feeQuoted, lead.feeQuoted) && Objects.equals(leadStatus, lead.leadStatus)
                && Objects.equals(leadSource, lead.leadSource) && Objects.equals(stack, lead.stack)
                && Objects.equals(course, lead.course) && Objects.equals(classMode, lead.classMode)
                && Objects.equals(nextFollowUp, lead.nextFollowUp) && Objects.equals(description, lead.description);
    }

    @Override
    public int hashCode() {
        return Objects.hash(id, name, cc, phone, email, feeQuoted, leadStatus, leadSource, stack, course, classMode, nextFollowUp, description);
    }

    // toString method
    @Override
    public String toString() {
        return "Lead{" +
                "id=" + id +
                ", name='" + name + '\'' +
                ", cc='" + cc + '\'' +
                ", phone='" + phone + '\'' +
                ", email='" + email + '\'' +
                ", feeQuoted='" + feeQuoted + '\'' +
                ", leadStatus='" + leadStatus + '\'' +
                ", leadSource='" + leadSource + '\'' +
                ", stack='" + stack + '\'' +
                ", course='" + course + '\'' +
                ", classMode='" + classMode + '\'' +
                ", nextFollowUp=" + nextFollowUp +
                ", description='" + description + '\'' +
                '}';
    }
}
